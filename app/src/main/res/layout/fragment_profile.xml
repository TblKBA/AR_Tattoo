<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/text_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Куликова Татьяна Ивановна"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FIO"
            android:textColor="@android:color/background_dark" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold" android:layout_marginStart="40dp"/>
    <TextView
            android:text="Комментарий врача"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Therapy"
            android:textColor="@android:color/background_dark" android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/FIO"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:text="Право на завтраки и обеды"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Pravo"
            android:textColor="@android:color/background_dark" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/Therapy" android:layout_marginTop="32dp"
            android:layout_marginStart="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>