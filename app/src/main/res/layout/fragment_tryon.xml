<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@color/colorPrimary">

    <Button
            android:text="Загрузить татуировку"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/givetatoo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:background="@color/colorAccent" android:textColor="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/checkBox3"/>
    <CheckBox
            android:text="Загрузить желаемую татуировку"
            android:layout_width="211dp"
            android:layout_height="87dp" android:id="@+id/checkBox"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" android:textAlignment="center" android:textColor="@android:color/background_light"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <CheckBox
            android:text="Загрузить предпологаемое место тату"
            android:layout_width="211dp"
            android:layout_height="87dp" android:id="@+id/checkBox2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/checkBox"
            android:layout_marginTop="8dp" android:textColor="@android:color/background_light"/>
    <CheckBox
            android:text="Сохранить/Изменить полученное тату"
            android:layout_width="211dp"
            android:layout_height="87dp" android:id="@+id/checkBox3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2"
            android:textColor="@android:color/background_light" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Для примерки татуировки на тело необходимо:"
            android:layout_width="395dp"
            android:layout_height="46dp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/checkBox"
            android:textSize="18sp" android:textStyle="bold" android:textAlignment="center"
            android:textColor="@android:color/background_light" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>